    <!-- normal text sans-serif -->
    <style name="TextRegular">
        <item name="android:fontFamily">@font/font_open_sans_regular</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/sp16</item>
        <item name="android:ellipsize">end</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
    </style>

    <!-- normal text sans-serif -->
    <style name="TextBold">
        <item name="android:fontFamily">@font/font_open_sans_regular</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/sp16</item>
        <item name="android:ellipsize">end</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
    </style>

    <!-- normal text sans-serif -->
    <style name="TextSemiBold">
        <item name="android:fontFamily">@font/font_open_sans_regular</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/sp16</item>
        <item name="android:ellipsize">end</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
    </style>

    <style name="Button" parent="Widget.MaterialComponents.Button">
        <item name="android:fontFamily">@font/font_open_sans_regular</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/sp16</item>
    </style>


    <!-- elevations -->
    <style name="elevationFloating">
        <item name="android:elevation">@dimen/elevation_floating_button</item>
    </style>

    <style name="elevationFloatingSub">
        <item name="android:elevation">@dimen/elevation_floating_button_sub</item>
    </style>

    <style name="elevationCardView">
        <item name="android:elevation">@dimen/elevation_card_view</item>
    </style>

    <style name="elevationDialogPicker">
        <item name="android:elevation">@dimen/elevation_dialog_picker</item>
    </style>

    <style name="elevationNavDrawer">
        <item name="android:elevation">@dimen/elevation_nav_drawer</item>
    </style>

    <style name="elevationSwitch">
        <item name="android:elevation">@dimen/elevation_switch</item>
    </style>

    <style name="elevationSnackBar">
        <item name="android:elevation">@dimen/elevation_snack_bar</item>
    </style>

    <style name="elevationToolbar">
        <item name="android:elevation">@dimen/elevation_toolbar</item>
    </style>
